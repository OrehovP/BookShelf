@model LogicLayer.PresentationModel.CreateEditAuthor

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateEdit</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>CreateEditAuthor</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Form.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Form.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Form.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Form.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Form.DateBorn, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @if (Model == null)
                    {
                        @Html.EditorFor(model => model.Form.DateBorn, new {htmlAttributes = new {@class = "form-control", @id = "datep"}})
                    }
                    else
                    {
                        @Html.EditorFor(model => model.Form.DateBorn, new {htmlAttributes = new {@class = "form-control", @id = "datep", @Value = Model.Form.DateBorn.ToString("dd.MM.yyyy")} })
                    }
                    @Html.ValidationMessageFor(model => model.Form.DateBorn, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    <script>
        $(function () {

            $('#datep').datepicker({dateFormat: 'dd.mm.yy'});

        });
    </script>
</body>
</html>
